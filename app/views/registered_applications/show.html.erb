<div class="row">
    <div class="col-md-8">
        <div class="media">
            <div class="media-heading">
                <h2><%= @app.name %></h2>
                <h3><%= link_to @app.url, "#{@app.url}" %></h3>
                <h4><%= @app.events.count %> total events have been tracked for this application</h4>
                <div class="pull-right">
                    <%= link_to "Delete Application", registered_application_path, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to stop tracking data for this application?'} %>
                </div>
            </div>
            <div class="media-body">
                <%= render 'registered_applications/events' || content_tag(:h4, "No events have been tracked yet for this application.") %>
            </div>
        </div>
    </div>
</div>
